@using Blog_Project_Application.Models.DTOs.PostDTO;

@{
    ViewData["Title"] = "Create";
}
@model CreatePostDTO


    <div class="col-lg-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Post</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="create" asp-controller="post" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title">@Html.DisplayNameFor(x=>x.Title)</label>
                        <input asp-for="Title" class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="Content">@Html.DisplayNameFor(x=>x.Content)</label>
                        <textarea asp-for="Content" class="form-control" rows="3" placeholder="Enter Content"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="GenreId" class="form-label mt-4">@Html.DisplayNameFor(x=>x.GenreId)</label>
                        <select asp-for="GenreId" class="custom-select" asp-items="@ViewBag.Genres">
                            <option>Please select a Genre</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="AuthorId" class="form-label mt-4">@Html.DisplayNameFor(x=>x.AuthorId)</label>
                        <select asp-for="AuthorId" class="custom-select" asp-items="@ViewBag.Authors">
                            <option>Please select a Genre</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="UploadPath" class="form-label mt-4">Select Image</label>
                        <input asp-for="UploadPath" type="file" class="form-control">
                    </div>

                </div>

                <div class="card-footer">
                    <a asp-controller="post" asp-action="index" class="btn btn-info m-2">Back To The List</a>
                    <button type="submit" class="btn btn-primary">Create Post</button>
                </div>
            </form>
        </div>
    </div>

