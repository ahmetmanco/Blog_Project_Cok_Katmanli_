@using _3_Blog_Project_Application.Models.DTOs.GenreDTO;
@model UpdateGenreDTO
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Update Genre</h3>

        </div>
        <form asp-area="Admin" asp-controller="Genre" asp-action="Update" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" placeholder="Genre Name" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <a asp-action="Update" class="btn btn-primary btn-sm-float-end mr-2">Back to Genre List</a>
                <input type="submit" class="btn btn-success btn-sm-float-end mr-2" value="Update Genre" />
            </div>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />

@section Script {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



