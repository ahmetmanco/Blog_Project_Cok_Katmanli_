@using Blog_Project_Application.Models.VM.GenreVM;
@model List<GenreVM>
@{
    ViewData["Title"] = "Index";
}
<h1>Admin Area'daki Genre Index Sayfası Değişiklik'</h1>

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">List of Genre</h3>

        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Genre" asp-route-id="@item.Id" asp-action="Update" class="btn btn-sm btn-warning">
                                Update
                            </a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Genre" asp-route-id="@item.Id" asp-action="Update" class="btn btn-sm btn-warning">
                                Delete
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
            <div class="card-footer">
                <a asp-action="Create"class="btn btn-block btn-dark">Create Genre</a>
            </div>
        </div>
    </div>
</div>